<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.asus.alunobd.Cadastro">

    <EditText
        android:id="@+id/editTextNome"
        android:layout_width="308dp"
        android:layout_height="75dp"
        android:ems="10"
        android:hint="Nome"
        android:inputType="textPersonName"
        android:layout_marginBottom="47dp"
        app:layout_constraintBottom_toTopOf="@+id/editTextRa"
        android:layout_marginLeft="38dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.433" />

    <EditText
        android:id="@+id/editTextRa"
        android:layout_width="308dp"
        android:layout_height="75dp"
        android:ems="10"
        android:hint="RA"
        android:inputType="textPersonName"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginBottom="263dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/buttonVoltar"
        android:layout_width="117dp"
        android:layout_height="67dp"
        android:layout_marginBottom="115dp"
        android:layout_marginRight="48dp"
        android:onClick="voltar"
        android:text="Voltar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/buttonCadastrarAluno"
        android:layout_width="117dp"
        android:layout_height="67dp"
        android:layout_marginBottom="115dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:onClick="cadastrar"
        android:text="Cadastrar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/buttonVoltar" />
</android.support.constraint.ConstraintLayout>
